CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
CFLAGS = -Wall -Werror -Wextra -pedantic
NAME = school
RM = rm -f
.PHONY: all clean oclean fclean re

all: m.h $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

clean:
	$(RM) *~ *.swp *.swo *.swn $(NAME)
oclean:
	$(RM) $(OBJ)
fclean: clean oclean
re: oclean all
.PHONY: clean
